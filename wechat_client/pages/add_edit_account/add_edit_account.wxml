<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">账户名称：</view>
    <input name="name" placeholder="账户名称" type="text" confirm-type="next" value="{{formData.name}}" />
  </view>
  <view class="section section_gap">
    <view class="section__title">账户类型：</view>
    <input name="typeName" placeholder="账户类型" type="text" confirm-type="next" disabled value="{{formData.typeName}}" />
  </view>
  <view class="section">
    <view class="section__title">金额：</view>
    <input name="money" placeholder="金额" type="digit" confirm-type="next" value="0" value="{{formData.money}}" />
  </view>
  <view class="section">
    <view class="section__title">选择账户颜色：</view>
    <view style="background:{{formData.color}};">
      <input class="color_block" name="color" placeholder="账户颜色" type="text" confirm-type="next" value="{{formData.color}}" catchtap="toPick" />
    </view>
  </view>
  <view class="btn-area">
    <button formType="submit" type="primary">提交</button>
    <button formType="reset">重置</button>
  </view>
  <color-picker bindchangeColor="pickColor" initColor="{{formData.color}}" show="{{pick}}" />
</form>