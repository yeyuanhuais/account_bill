.bill {
  width: 100%;
  min-height: 98vh;
  justify-content: space-between;
  display: flex;
  flex-direction: column;
}
.bill .top {
  height: 100rpx;
}
.bill .middle {
  flex: 1;
  overflow: auto;
  width: 100%;
  height: 100%;
}
.bill .middle .middle_left {
  border-right: 1rpx solid #eeeeee;
  text-align: end;
}
.bill .middle .middle_item {
  flex: 1;
}
.bill .flex {
  display: flex;
  justify-content: space-between;
}
