.container {
  padding: 10rpx;
  width: 100%;
  height: 100vh;
}

.swiper_tab {
  text-align: left;
  line-height: 80rpx;
  white-space: nowrap;
  overflow: auto;
  width: 100%;
}

.swiper_tab_item {
  color: #434343;
  display: inline-block;
  width: 150rpx;
  text-align: center;
  font-size: 30rpx;
}

.active {
  display: inline-block;
  color: #2761cc;
  /* border-bottom: 5rpx solid #2761cc; */
  width: 200rpx;
  text-align: center;
  font-size: 35rpx;
}

.swiper_box {
  width: 100%;
  margin-top: 10rpx;
}

.swiper_box_item {
  width: 90%;
  margin: 0 auto;
}

.swiper_box_item > view {
  min-height: 120rpx;
  align-items: center;
  border-radius: 15rpx;
  border: 4rpx solid #e1e1e1;
  padding: 15rpx;
  box-sizing: border-box;
  display: flex;
}

/* 资产框样式 */
.swiper_box_item .top {
  justify-content: space-between;
}

.swiper_box_item .top_left {
  font-size: 35rpx;
}

.swiper_box_item .top_right {
  display: flex;
  flex-flow: column wrap;
  font-size: 32rpx;
  align-items: flex-end;
}

.swiper_box_item .money {
  color: #2761cc;
  font-size: 38rpx;
}

.swiper_box_item .net_money {
  color: #3f3f3fe7;
  font-size: 28rpx;
}

/* 添加账户样式 */
.swiper_box_item .add_box {
  margin-top: 30rpx;
}
.swiper_box_item .add_text {
  font-size: 35rpx;
  margin-left: 20rpx;
  color: #3f3f3fe7;
}
