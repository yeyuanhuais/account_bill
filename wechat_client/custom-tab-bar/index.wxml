<view class="bar">
  <view class="bar__item {{ index == selected ? 'bar__active' : '' }}" wx:for="{{list}}" wx:key="index" bind:tap="handleClick" data-index="{{ index }}" data-path="{{ item.pagePath }}">
    <icon wx:if="{{index == 2&&selected==2 }}" color="#76BA99" name="icon-jia" size="60" class="bar__icon" mode="aspectFit" />
    <icon wx:elif="{{index == selected }}" color="#76BA99" name="{{item.icon}}" size="60" class="bar__icon" mode="aspectFit" />
    <icon wx:else color="#999999" name="{{item.icon}}" size="60" class="bar__icon" mode="aspectFit" />
    <view class="bar__text">{{ item.text }}</view>
  </view>
</view>